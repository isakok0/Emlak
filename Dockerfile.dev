# Server Development Dockerfile
FROM node:18-alpine

WORKDIR /app

# Install nodemon globally for development
RUN npm install -g nodemon

# Copy package files
COPY package*.json ./

# Install dependencies
RUN npm install

# Copy server files
COPY server ./server

# Create uploads directory
RUN mkdir -p server/uploads

# Expose port
EXPOSE 5000

# Start development server
CMD ["npm", "run", "dev"]


